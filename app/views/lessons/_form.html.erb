<h2>Lessons</h2>

  <div class="form-inputs">

     <%= f.input :name,
                input_html: { autocomplete: "Name" }%>
      <%= f.input :description,
                input_html: { autocomplete: "Description" }%>
    <%= f.input :video_url,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "video_url" }%>
      <%= f.input :post_content,
                input_html: { autocomplete: "post_content" }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create new lesson" %>
  </div>


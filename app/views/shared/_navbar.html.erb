<% if !current_page?(root_path) %>
  <div class="navbar navbar-expand-sm navbar-lewagon ">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand text-white" do %>MENTORME
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Home", root_path, class: "navbar-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Browse Courses", courses_path, class: "navbar-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Courses", courses_my_courses_path, class: "navbar-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Become a mentor", new_course_path, data: { turbo: 'false' },  class: "navbar-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "How does it work?", help_path,  class: "navbar-link" %>
            </li>
            <li class="nav-item dropdown">
              <a href="#" class="navbar-link"  id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                My Profile
              </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Public Profile", "#", class: "dropdown-item" %>
                <%= link_to "Edit Profile", "#", class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
